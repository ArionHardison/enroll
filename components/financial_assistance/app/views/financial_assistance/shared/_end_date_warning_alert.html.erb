<div class="alert alert-info d-flex" role="alert">
  <div class="pl-2 pt-2 pr-1">
    <div class="info-icon icon" alt="info" aria-hidden="true">&nbsp;</div>
  </div>
  <div class="mt-1 pl-0 pr-2 pt-1">
    <% translation_group = FinancialAssistance::Income::ALL_INCOME_KINDS_MAPPED[kind.to_sym].present? ? "" : "s" %>
    <p class="subtext" data-cuke="end-date-warning-text"><%= l10n('faa.note') %> <%= l10n('faa.incomes.income_note', subject: applicant.first_name, income_kind: l10n("faa.income#{translation_group}.#{kind.to_s}").downcase, end_date_field_label: l10n('end_date')) %></p>
  </div>
</div>
